<Window x:Class="Lopatkin_Glazki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lopatkin_Glazki"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Century Gothic" Icon="Res/Глазки-save.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Image  Source="Res/Глазки-save.png" HorizontalAlignment="Left"/>
        <TextBlock FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Глазки"/>
        <Button Content="Назад" Name="BtnBack" Width="175" Height="30" HorizontalAlignment="Right" Margin="5" Background="#FFB175EE" Click="BtnBack_Click"></Button>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered"  NavigationUIVisibility="Hidden"></Frame>

    </Grid>
</Window>
